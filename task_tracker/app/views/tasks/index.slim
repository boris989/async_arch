= link_to 'Добавить задачу', new_task_path
br
= link_to 'Заассайнить задачи', shuffle_tasks_path, data: { turbo_method: "patch" }
table.table
  tr
    th #
    th Описание
    th Статус
    th Исполнитель
    td
  - @tasks.each do |task|
    tr
      td = task.id
      td = task.description
      td = task.status
      td = task.account.full_name
      td
        - if task.open?
          = link_to 'Завершить', complete_employee_task_path(task),  data: { turbo_method: "patch" }
        '
        = link_to 'Изменить', edit_task_path(task)